{
  "name": "@gearbox-protocol/safe-watcher",
  "version": "1.1.0",
  "author": "doomsower <12031673+doomsower@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "module": "dist/index.mjs",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node esbuild.mjs",
    "start": "touch .env && sh -c 'tsx --env-file .env src/index.ts \"$@\" | pino-pretty --colorize' --",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:ci": "npx prettier --check .",
    "lint": "eslint \"**/*.ts\" --fix",
    "lint:ci": "eslint \"**/*.ts\"",
    "typecheck:ci": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@vlad-yakovlev/telegram-md": "^2.0.0",
    "abitype": "^1.0.8",
    "date-fns": "^4.1.0",
    "nanoid": "^5.0.9",
    "pino": "^9.5.0",
    "viem": "^2.21.55",
    "yaml": "^2.7.0",
    "zod": "^3.24.2",
    "zod-config": "^0.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@gearbox-protocol/eslint-config": "^2.0.0-next.2",
    "@gearbox-protocol/prettier-config": "^2.0.0-next.0",
    "@types/node": "^22.13.5",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "msw": "^2.2.2",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@gearbox-protocol/eslint-config"
    ]
  },
  "prettier": "@gearbox-protocol/prettier-config",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "packageManager": "yarn@1.22.22"
}
